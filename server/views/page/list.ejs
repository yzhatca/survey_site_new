<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<div>
    <div>
        <h1>Surveys</h1>
        <br>
        <table>
            <!-- Header Row -->
            <tr>
                <th>Survey Name</th>
                <th>Description</th>
                <th>End Date</th>
                <th>Take Survey</th>
                <th>EDIT Survey</th>
                <th>DELETE Survey</th>
            </tr>

            <!-- Repeatable Template Row -->
            <% for(let item of SurveyList) { %>
                <tr>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <%= item.description %>
                    </td>
                    <td>
                        <%= item.endTime.toISOString().split('T')[0] %>
                    </td>
                    <td>
                        <a href="/survey/take/<%= item._id %>">
                            <i class="bi bi-check-square"></i>Take Survey</a>
                    </td>
                    <td>
                        <a href="/survey/update/<%= item._id %>">
                            <i class="bi bi-check-square"></i>EDIT Survey</a>
                    </td>
                    <td>
                        <a href="/survey/delete/<%= item._id %>">
                            <i class="bi bi-check-square"></i>DELETE Survey</a>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>
</div>
<%- include ../partials/footer.ejs %>
